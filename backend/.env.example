# CoinTracker Pro Configuration
# Copy this to .env and fill in your values

# App Settings
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production

# Binance API (Get from binance.com/en/my/settings/api-management)
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret
BINANCE_TESTNET=true  # Set to false for real trading

# Database
DATABASE_URL=sqlite+aiosqlite:///./cointracker.db

# Optional: LunarCrush API (for social sentiment)
LUNARCRUSH_API_KEY=

# Trading Settings
DEFAULT_TRADING_PAIR=BTC/USDT
SIGNAL_THRESHOLD=70
CONFIDENCE_THRESHOLD=0.7

# Risk Management
MAX_POSITION_SIZE_PCT=10.0
DEFAULT_STOP_LOSS_PCT=5.0
DEFAULT_TAKE_PROFIT_PCT=15.0
